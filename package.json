{
    "$schema": "https://json.schemastore.org/package",
    "name": "vivien",
    "version": "0.0.0",
    "description": "Secure, lightweight, and user-friendly modern JavaScript toolchain optimized for performance and minimalism.",
    "main": "src/index.ts",
    "module": "src/index.ts",
    "type": "module",
    "scripts": {
        "build": "bun build ./src/*.ts --outdir ./dist"
